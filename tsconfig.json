    "target": "ESNext",
    "noImplicitAny": true,
    "skipLibCheck": false,
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["."],
  "exclude": [
    "node_modules",
    "lib/**/*"
  ]
}
